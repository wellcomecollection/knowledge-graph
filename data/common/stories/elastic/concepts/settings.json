{
  "analysis": {
    "analyzer": {
      "csv_analyzer": {
        "tokenizer": "csv_tokenizer"
      },
      "shingle_asciifolding_analyzer": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": [
          "lowercase",
          "shingle_token_filter",
          "asciifolding_token_filter"
        ]
      },
      "english_analyzer": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": [
          "lowercase",
          "english_token_filter",
          "english_possessive_token_filter"
        ]
      }
    },
    "tokenizer": {
      "csv_tokenizer": {
        "type": "pattern",
        "pattern": "<BREAK>|<SEP>"
      }
    },
    "filter": {
      "asciifolding_token_filter": {
        "type": "asciifolding",
        "preserve_original": true
      },
      "shingle_token_filter": {
        "type": "shingle",
        "max_shingle_size": 4,
        "min_shingle_size": 2
      },
      "english_token_filter": {
        "type": "stemmer",
        "name": "english"
      },
      "english_possessive_token_filter": {
        "type": "stemmer",
        "name": "possessive_english"
      }
    },
    "normalizer": {
      "lowercase_normalizer": {
        "type": "custom",
        "filter": ["lowercase"]
      }
    }
  }
}
