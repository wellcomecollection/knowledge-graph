{
    "bool": {
        "must": {
            "multi_match": {
                "query": "{{query}}",
                "fields": [
                    "lc_names_id",
                    "wikidata_id",
                    "lc_subjects_id",
                    "mesh_id",
                    "variants.keyword",
                    "name.keyword",
                    "wikidata_preferred_name.keyword",
                    "lc_subjects_preferred_name.keyword",
                    "lc_names_preferred_name.keyword",
                    "mesh_preferred_name.keyword",
                    "preferred_name.keyword^100"
                ]
            }
        },
        "filter": {
            "term": {
                "type": "person"
            }
        }
    }
}
