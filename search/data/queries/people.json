{
    "bool": {
        "must": {
            "multi_match": {
                "query": "{{query}}",
                "fields": [
                    "variants",
                    "variants.*",
                    "name",
                    "name.*",
                    "wikidata_preferred_name",
                    "wikidata_preferred_name.*",
                    "wikidata_id",
                    "lcsh_preferred_name",
                    "lcsh_preferred_name.*",
                    "lcsh_id",
                    "mesh_preferred_name",
                    "mesh_preferred_name.*",
                    "mesh_id"
                ]
            }
        },
        "filter": {
            "term": {
                "type": "person"
            }
        }
    }
}
